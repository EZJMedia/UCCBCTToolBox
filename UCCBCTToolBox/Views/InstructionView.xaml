<Window x:Class="UCCBCTToolBox.Views.InstructionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:UCCBCTToolBox.ViewModels"
        Width="600"
        Height="500"
        ResizeMode="CanMinimize"
        Title="Instructions"
        WindowStartupLocation="CenterScreen"
        >
    <Window.Resources >
        <ViewModel:InstructionViewModel x:Key="model" />
    </Window.Resources>

    <Window.DataContext>
        <Binding Source="{StaticResource model}" />
    </Window.DataContext>

    <ScrollViewer Margin="8" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <StackPanel>
                <TextBlock Text="Instructions" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Welcome to the UC Toolkit. This program is designed to overlay onto your computer screen and has all the tools built in that an orthogonal doctor may need. This toolkit can be used with x-ray, CBCT, or MRI. This toolkit is meant to streamline the upper cervical analysis process for quicker speed and greater accuracy."/>
                <TextBlock TextWrapping="Wrap" FontSize="14" Margin="0 14 0 0"
                       Text="Using RadiAnt or the viewing software of your choice, position the image for optimal measurements. Once all necessary structures are in view, open the toolkit as a digital overlay to obtain any measurements necessary. Check advoaccessories.com/uc-toolkit for videos on analysis and software licensing. Email joshsilverdc@gmail.com for any questions, feedback, or suggestions."/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="Main Calcs" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Click to display calculations box or hide it. Select correct language for given technique using translation box. Autoload will carry the measurements from C/A directly into the calc box. Sonus will copy all measurements to clipboard. Select first box within Sonus blueprint and ctrl+V to paste measurements directly."/>
                <TextBlock TextWrapping="Wrap" FontSize="14" Margin="0 14 0 0"
                       Text="The head tilt line is compared to the superior lateral mass to calculate the upper angle of the misalignment. The inferior lateral mass line is compared to cervical spine tilt to determine the lower angle of the misalignment. The superior and inferior lateral mass lines are averaged to make the working plane line. This method is called the triple plane line method and is new. If you wish to just use a single plane line as in the traditional method, enter it into both superior and inferior lateral mass boxes."/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="Cephalo" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14" Text="{Binding Cephalo, Mode=OneWay}"/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="HA/VA" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Click on two points on screen to lay horizontal and vertical angles. Up down arrow keys with translate instruments. Right left arrow keys will rotate the line .1 degrees. Ctrl and side arrow will rotate line .01 degrees and shift arrow will rotate line 1 degree."/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="Protractor" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Click 3 points on screen to lay a protractor. The center dot will drag the tool while the side dots will change angle."/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="C/A + Calibrate" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Before measuring C/A, you must calibrate the toolkit. In the viewer you are using, place a small horizontal line with a measurement. In toolkit, place the calibration button to display a line. Place that line over the line drawn in the viewer until the lengths are the same and enter the appropriate distance."/>
                <TextBlock TextWrapping="Wrap" FontSize="14" Margin="0 14 0 0"
                       Text="The C/A tools will place 4 dots. The first dot is on the lateral border of the condyle/axis, the next point is on the medial border of that same joint, the third dot is the medial border of the other side, and the fourth point is the lateral border of the condyle/axis on the other side of the joint. The toolkit will draw 3 circles. 2 red circles show the C/A for each side of the joint and the green line will show the average of those circles. Autoload in main calcs will carry these measurements into the calc box."/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="CenterPoint" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Place multiple center points on screen. Color changing feature available as needed. Press escape to exit tool when done."/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="Transparent" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Makes all markings temporarily 50% transparent."/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="Show Misalignment" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Carries the lines from the main calculations box to show all aspects of the subluxation overlayed on the image. Drag the horizontal bar to the posterior arch. Drag the upper line to the center of the skull. Drag the dot where the red and green intersect onto the lowest cervical spinous process. Good for report of findings and seeing the whole subluxation pattern."/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="Snip Tool" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Allows snipping of screenshots for later."/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="Import" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Imports images onto screen."/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="Freehand" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Drawing tool. Select thickness and color as needed. Press ctrl + Z to undo, esc to exit tool."/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="Line" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Draws a straight line."/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="Clear All" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Removes all markings from the screen."/>
            </StackPanel>

            <StackPanel Margin="0 24 0 0">
                <TextBlock Text="Deactivate" FontSize="18" FontWeight="Bold" />
                <TextBlock TextWrapping="Wrap" FontSize="14"
                Text="Deactivates given serial number for this computer. Can be reactivated at any time. Each serial number is good for 2 computers. If you are changing computers, you must deactivate the toolkit first."/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>