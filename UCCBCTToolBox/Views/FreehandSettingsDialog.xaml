<Window x:Class="UCCBCTToolBox.Views.FreehandSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCCBCTToolBox.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        MaxHeight="160"
        MaxWidth="300">
    <Grid>
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="Border">
                    <Setter Property="Padding" Value="4" />
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Padding" Value="8 4" />
                </Style>
            </StackPanel.Resources>
            <Border>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Thickness" MinWidth="80" />
                    <TextBox MinWidth="100" Text="{Binding Path=StrokeThickness}" />
                </StackPanel>
            </Border>
            <Border>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Color" MinWidth="80" />
                    <ComboBox ItemsSource="{Binding Path=AvailableBrushes}" 
                              SelectedItem="{Binding Path=FillColor, Mode=TwoWay}"
                              MinWidth="100"
                              x:Name="ColorBox">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="string">
                                <TextBlock Text="{Binding .}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </Border>
            <Border>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Close" x:Name="CloseButton" Click="CloseButton_Click" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
