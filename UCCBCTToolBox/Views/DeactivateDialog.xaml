<Window x:Class="UCCBCTToolBox.Views.DeactivateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCCBCTToolBox.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        MaxHeight="180"
        MaxWidth="300">
    <Grid>
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="Border">
                    <Setter Property="Padding" Value="4" />
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Padding" Value="8 4" />
                </Style>
            </StackPanel.Resources>
            <Border>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Warning!" MinWidth="80"
                           Foreground="Red" FontWeight="Bold" FontSize="22"/>
                    <TextBlock TextWrapping="Wrap" Foreground="Red">
                        <Run>If you proceed, you won't be able to use the software on this device any more.</Run>
                        <Run>Please enter the sum of</Run>
                        <Run Text="{Binding Path=NumberA, Mode=OneTime}" />
                        <Run>and</Run>
                        <Run Text="{Binding Path=NumberB, Mode=OneTime}" />
                        <Run>to proceed.</Run>
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <Border>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Answer" MinWidth="80" />
                    <TextBox MinWidth="100" Text="{Binding Path=Sum}" Padding="4" />
                </StackPanel>
            </Border>
            
            <Border>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Deactivate" x:Name="DeactivateButton" Click="DeactivateButton_Click"
                            Background="DarkRed" Foreground="White" Margin="0 0 8 0" BorderBrush="Transparent"/>
                    <Button Content="Close" x:Name="CloseButton" Click="CloseButton_Click"
                            Background="Green" Foreground="White" BorderBrush="Transparent"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
