<Window x:Class="UCCBCTToolBox.Views.CalibrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Topmost="{Binding Path=ClientStateManager.IsForceToTop,
                    Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
        Title="Calibration">
    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Border">
                <Setter Property="Padding" Value="4" />
            </Style>
        </WrapPanel.Resources>
        <StackPanel Margin="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="60" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="Length" />
                </Border>

                <Border Grid.Column="1" Grid.Row="0">
                    <TextBox x:Name="lengthValue" Text="100" />
                </Border>

                <Border Grid.Column="2" Grid.Row="0">
                    <TextBlock x:Name="unit" Text="{Binding ElementName=unitBox, Path=SelectedValue.Tag, Mode=OneWay}" />
                </Border>

                <Border Grid.Column="0" Grid.Row="1">
                    <TextBlock Text="Unit" />
                </Border>

                <Border Grid.Column="1" Grid.Row="1">
                    <ComboBox x:Name="unitBox">
                        <ComboBoxItem IsSelected="True" Tag="cm">
                            Centimeter
                        </ComboBoxItem>
                        <ComboBoxItem Tag="in">
                            Inches
                        </ComboBoxItem>
                    </ComboBox>
                </Border>
            </Grid>

            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Margin="0 10 60 10">
                <Button x:Name="CancelButton" Content="Cancel" Padding="8 4" Click="CancelButton_Click" />
                <Button x:Name="OkButton" Content="OK" Padding="8 4" Margin="8 0 0 0" Click="OkButton_Click" />
            </StackPanel>
        </StackPanel>
    </WrapPanel>
</Window>
