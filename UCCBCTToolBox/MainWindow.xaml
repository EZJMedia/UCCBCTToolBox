<Window x:Class="UCCBCTToolBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCCBCTToolBox"
        xmlns:ViewModel="clr-namespace:UCCBCTToolBox.ViewModels"
        xmlns:hp="clr-namespace:UCCBCTToolBox.Helpers"
        mc:Ignorable="d"
        Icon="Assets/Images/icon.png"
        Title="MainWindow"
        Height="650"
        Width="1200"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True"
        WindowState="Maximized"
        WindowStyle="None"
        Topmost="{Binding Path=ClientStateManager.IsForceToTop,
                    Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
    <Window.Resources>
        <ViewModel:MainWindowViewModel x:Key="model" />
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding x:Name="RoutedCommands" Command="{x:Static local:MainWindow.routedCommand}" Executed="RoutedCommands_Executed" />
    </Window.CommandBindings>
    <Canvas x:Name="OuterCanvas" DataContext="{Binding Source={StaticResource model}}">
        <Canvas.Background>
            <SolidColorBrush Color="Black" Opacity="0.01" />
        </Canvas.Background>

        <Grid Height="48" x:Name="OuterCanvasActionBar"
              Width="{Binding ElementName=OuterCanvas, Path=ActualWidth}">
            <Grid.Resources >
                <Style TargetType="Border" >
                    <Setter Property="Padding" Value="2" />
                    <Setter Property="MaxHeight" Value="42" />
                </Style>
            </Grid.Resources>
            <Grid.Background>
                <SolidColorBrush Color="SkyBlue" />
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="6px" />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0">
                <Image x:Name="Logo" Source="Assets/Images/icon.png" MouseDown="Logo_MouseDown">
                    <Image.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="InstructionMenuItem" Click="InstructionMenuItem_Click"  Header="Instructions"/>
                            <MenuItem x:Name="DeactivateMenuItem" Click="DeactivateMenuItem_Click" Header="Deactivate"/>
                        </ContextMenu>
                    </Image.ContextMenu>
                </Image>
            </Border>

            <Border Grid.Row="0" Grid.Column="1">
                <StackPanel Orientation="Horizontal" >
                    <StackPanel.Resources>
                        <Style TargetType="Border" >
                            <Setter Property="Padding" Value="2, 2" />
                        </Style>
                        <Style TargetType="Button" >
                            <Setter Property="Padding" Value="8 0" />
                        </Style>
                    </StackPanel.Resources>

                    <Border>
                        <Button x:Name="MainCalcsButton" Content="Main Calcs" Click="MainCalcsButton_Click" />
                    </Border>
                    <Border>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="HAButton" Content="HA" Click="HAButton_Click" />
                            <Button x:Name="VAButton" Content="VA" Click="VAButton_Click" />
                        </StackPanel>
                    </Border>
                    <Border>
                        <Button x:Name="ProtractorBtn" Content="Protractor" Click="ProtractorBtn_Click" />
                    </Border>
                    <Border>
                        <Button x:Name="CephaloBtn" Content="Cephalo" Click="CephaloBtn_Click" />
                    </Border>
                    <Border>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="CButton" Content="C" Click="CButton_Click" />
                            <Button x:Name="AButton" Content="A" Click="AButton_Click" />
                        </StackPanel>
                    </Border>
                    <Border>
                        <Button x:Name="Calibrate" Content="Calibrate" Click="Calibrate_Click" />
                    </Border>
                    <Border>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="CenterPointButton" Content="Center Point" Click="CenterPointButton_Click" />
                            <Button x:Name="CenterPointSettingsButton" FontFamily="{StaticResource FontAwesome}" Content="&#xf03a;" Click="CenterPointSettingsButton_Click" />
                        </StackPanel>
                    </Border>
                    <Border>
                        <Button x:Name="Transparent50" Content="Transparent" Click="Transparent50_Click" />
                    </Border>
                    <Border>
                        <Button x:Name="Misalignment" Content="Show Misalignment" Click="Misalignment_Click" />
                    </Border>
                    <Border>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="SnipToolButton" Content="SnipTool" Click="SnipToolButton_Click" />
                            <Button x:Name="SnipToolSettingsButton" FontFamily="{StaticResource FontAwesome}" Content="&#xf03a;" Click="SnipToolSettingsButton_Click" />
                        </StackPanel>
                    </Border>
                    <Border>
                        <Button x:Name="ImportButton" Content="Import" Click="ImportButton_Click" />
                    </Border>
                    <Border>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="FreehandButton" Content="Freehand" Click="FreehandButton_Click" />
                            <Button x:Name="FreehandSettingsButton" FontFamily="{StaticResource FontAwesome}" Content="&#xf03a;" Click="FreehandSettingsButton_Click" />
                        </StackPanel>
                    </Border>
                    <Border>
                        <Button x:Name="StraightLineButton" Content="Line" Click="StraightLineButton_Click" />
                    </Border>
                    <Border>
                        <Button x:Name="InsertText" Content="Text" Click="InsertText_Click" />
                    </Border>
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="2">
                <StackPanel Orientation="Horizontal">
                    
                    <Button x:Name="ClearAll" Content="Clear All" Padding="4" Click="ClearAll_Click" />
                </StackPanel>
                
            </Border>

            <Border Grid.Row="0" Grid.Column="3">

            </Border>

            <Border Grid.Row="0" Grid.Column="4">
                <StackPanel Orientation="Horizontal">
                    
                    <Button x:Name="Minimize" Content="Minimize" Padding="4" Click="Minimize_Click" />
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="5">
            </Border>

            <Border Grid.Row="0" Grid.Column="6">
                <Button x:Name="CloseWindow" Content="Close" Padding="4" Click="CloseWindow_Click" />
            </Border>

            <StackPanel Grid.Row="0" Grid.Column="7" Orientation="Horizontal"></StackPanel>
        </Grid>

        <Canvas x:Name="InnerCanvas"
                Width="{Binding ElementName=OuterCanvas, Path=ActualWidth}"
                Height="{Binding ElementName=OuterCanvas, Path=ActualHeight}"
                Margin="0, 48"
                Background="Transparent">
            <Canvas.Resources>
                <!-- MoveThumb Template -->
                <ControlTemplate x:Key="MoveThumbTemplate" TargetType="{x:Type hp:MoveThumb}">
                    <Rectangle Fill="Transparent"/>
                </ControlTemplate>


                <!-- ResizeDecorator Template -->
                <ControlTemplate x:Key="ResizeDecoratorTemplate" TargetType="{x:Type Control}">
                    <Grid>
                        <hp:ResizeThumb Width="5" Height="5" Cursor="SizeNWSE" Margin="-5 -5 0 0" 
                        VerticalAlignment="Top" HorizontalAlignment="Left"/> <!--Left-Top-->
                        <hp:ResizeThumb Width="5" Height="5" Cursor="SizeNWSE" Margin="0 0 -5 -5"
                       VerticalAlignment="Bottom" HorizontalAlignment="Right"/> <!--Right-Bottom-->
                        <hp:ResizeThumb Width="auto" Height="5" Cursor="SizeNS" Margin="0 -5 -5 0"
                       VerticalAlignment="Top" HorizontalAlignment="Right"/> <!--Top-Right-->
                        <hp:ResizeThumb Width="5" Height="5" Cursor="SizeNS" Margin="-5 0 0 -5"
                       VerticalAlignment="Bottom" HorizontalAlignment="Left"/> <!--Bottom-Left-->
                    </Grid>
                </ControlTemplate>
                
                <!-- ResizeDecorator Template -->
                <ControlTemplate x:Key="FourCornerResizerDecoration" TargetType="{x:Type Control}">
                    <Grid>
                        <hp:ResizeThumb Width="5" Height="5" Cursor="SizeNWSE" Margin="-5 -5 0 0" 
                        VerticalAlignment="Top" HorizontalAlignment="Left"/> <!--Left-Top-->
                        <hp:ResizeThumb Width="5" Height="5" Cursor="SizeNWSE" Margin="0 0 -5 -5"
                       VerticalAlignment="Bottom" HorizontalAlignment="Right"/> <!--Right-Bottom-->
                        <hp:ResizeThumb Width="auto" Height="5" Cursor="SizeNESW" Margin="0 -5 -5 0"
                       VerticalAlignment="Top" HorizontalAlignment="Right"/> <!--Top-Right-->
                        <hp:ResizeThumb Width="5" Height="5" Cursor="SizeNESW" Margin="-5 0 0 -5"
                       VerticalAlignment="Bottom" HorizontalAlignment="Left"/> <!--Bottom-Left-->
                    </Grid>
                </ControlTemplate>


                <!-- Move and Resize Item Template-->
                <ControlTemplate x:Key="FourCornerResizeMoveTemplate" TargetType="ContentControl">
                    <Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                        <ContentPresenter Content="{TemplateBinding ContentControl.Content}"/>
                        <Control Template="{StaticResource FourCornerResizerDecoration}"/>
                        <hp:MoveThumb Template="{StaticResource MoveThumbTemplate}" Cursor="SizeAll"/>
                    </Grid>
                </ControlTemplate>


                <!-- Four Corner Resize Item Template-->
                <ControlTemplate x:Key="FourCornerResizeTemplate" TargetType="ContentControl">
                    <Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                        <ContentPresenter Content="{TemplateBinding ContentControl.Content}"/>
                        <Control Template="{StaticResource FourCornerResizerDecoration}"/>
                    </Grid>
                </ControlTemplate>


                <!-- Move and Resize Item Template-->
                <ControlTemplate x:Key="DesignerItemTemplate" TargetType="ContentControl">
                    <Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                        <ContentPresenter Content="{TemplateBinding ContentControl.Content}"/>
                        <Control Template="{StaticResource ResizeDecoratorTemplate}"/>
                        <hp:MoveThumb Template="{StaticResource MoveThumbTemplate}" Cursor="SizeAll"/>
                    </Grid>
                </ControlTemplate>

                <!-- Only Movable Item Template -->
                <ControlTemplate x:Key="MovableItemTemplate" TargetType="ContentControl">
                    <Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                        <ContentPresenter Content="{TemplateBinding ContentControl.Content}" />
                        <hp:MoveThumb Template="{StaticResource MoveThumbTemplate}" Cursor="SizeAll" />
                    </Grid>
                </ControlTemplate>
            </Canvas.Resources>
        </Canvas>
    </Canvas>
</Window>
