<Window x:Class="UCCBCTToolBox.PointSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCCBCTToolBox"
        mc:Ignorable="d"
        Title="PointSelectionWindow"
        Height="450"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True"
        WindowState="Maximized"
        WindowStyle="None">
    <Window.CommandBindings>
        <CommandBinding x:Name="CTRL_C" Command="{x:Static local:PointSelectionWindow.routedCommand}" Executed="CTRL_C_Executed" />
    </Window.CommandBindings>
    
    <Canvas x:Name="outerCanvas">
        <Canvas.Background>
            <SolidColorBrush Color="Black" Opacity="0.01" />
        </Canvas.Background>
        <Canvas.Resources >
            <Style TargetType="Border" >
                <Setter Property="Padding" Value="2" />
            </Style>
        </Canvas.Resources>


        <Grid Height="32" x:Name="actionBar"
              Width="{Binding ElementName=outerCanvas, Path=ActualWidth}">
            <Grid.Background>
                <SolidColorBrush Color="SkyBlue" />
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0">
                <Image x:Name="logo" Source="Assets/Images/icon.png"  MouseDown="logo_MouseDown" />
            </Border>

            <Border Grid.Row="0" Grid.Column="1">
                <Button x:Name="ClearAll" Content="Clear All" Padding="4" Click="ClearAll_Click" />
            </Border>

            <Border Grid.Row="0" Grid.Column="2">

            </Border>

            <Border Grid.Row="0" Grid.Column="3">
                <Button x:Name="Minimize" Content="Minimize" Padding="4" Click="Minimize_Click" />
            </Border>

            <Border Grid.Row="0" Grid.Column="4">
                <Button x:Name="Maximize" Content="Maximize" Padding="4" Click="Maximize_Click" />
            </Border>

            <Border Grid.Row="0" Grid.Column="5">
                <Button x:Name="CloseWindow" Content="Close" Padding="4" Click="CloseWindow_Click" />
            </Border>
        </Grid>
        
        <Canvas x:Name="innerCanvas" PreviewMouseUp="innerCanvas_PreviewMouseUp"
                Width="{Binding ElementName=outerCanvas, Path=ActualWidth}"
                Height="{Binding ElementName=outerCanvas, Path=ActualHeight}" Margin="0, 30">
            <Canvas.Background>
                <SolidColorBrush Color="Transparent" />
            </Canvas.Background>

            <Button x:Name="innerButton" Content="I'm inner"
                    PreviewMouseDown="innerButton_PreviewMouseDown"
                    PreviewMouseUp="innerButton_PreviewMouseUp"
                    PreviewMouseMove="innerButton_PreviewMouseMove"/>
        </Canvas>
    </Canvas>
</Window>
